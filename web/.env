# 线上版本改回来
VITE_HOST=""

# 开发版本
# VITE_HOST="http://127.0.0.1:38117"

# 模块开启
VITE_ENABLE_ANOUNCEMENT=false
VITE_ENABLE_WALLET=false

# 功能开启
VITE_ALLOW_TWEET_ATTACHMENT=true
VITE_ALLOW_TWEET_ATTACHMENT_PRICE=false
VITE_ALLOW_TWEET_VIDEO=true
VITE_ALLOW_TWEET_VISIBILITY=true
VITE_ALLOW_USER_REGISTER=true
VITE_ALLOW_ACTIVATION=false
VITE_ALLOW_PHONE_BIND=true

# 局部参数
VITE_DEFAULT_MSG_LOOP_INTERVAL=5000  # 拉取未读消息的间隔，单位：毫秒, 默认5000ms 
VITE_DEFAULT_TWEET_VISIBILITY=friend # 推文可见性，默认好友可见 
VITE_DEFAULT_TWEET_MAX_LENGTH=1400    # 推文最大长度, 默认400字
VITE_DEFAULT_COMMENT_MAX_LENGTH=1300  # 评论最大长度, 默认300字
VITE_DEFAULT_REPLY_MAX_LENGTH=1300    # 评论最大长度, 默认300字
VITE_RIGHT_FOLLOW_TOPIC_MAX_SIZE=12   # 右侧关注话题最大条目数， 默认6条
VITE_RIGHT_HOT_TOPIC_MAX_SIZE=24     # 右侧热门话题最大条目数， 默认12条
VITE_COPYRIGHT_TOP="2023 Vanilla"
VITE_COPYRIGHT_LEFT="Vanilla"
VITE_COPYRIGHT_LEFT_LINK=""
VITE_COPYRIGHT_RIGHT="Vanilla Sky"
VITE_COPYRIGHT_RIGHT_LINK="https://www.github.com"

# 图片推文参数
VITE_DEFAULT_TWEET_IMAGE_404="https://xxxx/xxx/x/xx/404.jpg"
# AliOSS 图片thumbnail参数 
VITE_TWEET_IMAGE_THUMBNAIL="?x-oss-process=image/resize,m_fill,w_300,h_300,limit_0/auto-orient,1/format,png"
